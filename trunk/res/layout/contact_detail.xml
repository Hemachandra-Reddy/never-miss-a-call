<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LIGHT_GREEN"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Unknown"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numberID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameID"
        android:text="9741818216"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/callImageViewID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_down" />

    <LinearLayout
        android:id="@+id/optionsLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberID"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/callID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/call"
            android:gravity="center_horizontal"
            android:text="Call" />

        <TextView
            android:id="@+id/editID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit"
            android:gravity="center_horizontal"
            android:text="Edit+Call" />

        <TextView
            android:id="@+id/deleteID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/delete"
            android:gravity="center_horizontal"
            android:text="Remove" />
    </LinearLayout>

    <ListView
        android:id="@+id/numberListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/optionsLayoutID"
        android:layout_marginTop="15dp" >
    </ListView>

</RelativeLayout>